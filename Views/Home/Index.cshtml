@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form action="/Home/Result" method="post">
        <label for="">Your Name:</label>
        <input type="text" name="Name"><br>
        <label for="">Dojo Location:</label>
        <select name="Dojo" id="">
            <option value="seattle">Seattle</option>
            <option value="sanFrancisco">San Francisco</option>
            <option value="austin">Austin</option>
        </select><br>
        <label for="">Favorite Language:</label>
        <select name="Language" id="">
            <option value="c#">C#</option>
            <option value="python">Python</option>
            <option value="react">React</option>
        </select><br>
        <label for="">Comment (optional):</label><br>
        <textarea name="Comment" style = "width: 350px; height: 75px; padding-top: 0; padding-left: 0;"></textarea><br>
        <button>Submit</button>
    </form>
</div>
